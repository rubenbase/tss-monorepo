{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "module": "Preserve",
    "noEmit": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
